    <script>
        // Get the modal
        var modal = document.getElementById('id01');

        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
    </script>
    <style type="text/css">
        body {
            background-color: #1b1c1d;
           
        }
        #mainBoard{
        width:90%;
        position: relative;
        margin:auto;
        padding-bottom: 10%;
            
        }
        .container {
        position: relative;
        font-family: Arial;
        }

        .text-block {
        position: fixed;
        
        bottom: 20px;
        right: 20px;
        background-color: black;
        color: white;
        padding-left: 20px;
        padding-right: 20px;
        }
