                    <button class="ui icon button" type="button" onclick="search()"> 
                    <i class="search icon"></i>
                    </button>
                </div>
            </section>
        </img>
        
        <section id="mainBoard">
            <div class="ui segment" style="width: 90%; margin: auto; margin-top: -10%; opacity: 0.8;">
                <h2 class="ui header">
                    <i class="tiny th icon"></i>
                    My Club
                </h2>
                <div class="ui two column stackable grid">
                    <div class="column">
                        <div class="ui segment">
