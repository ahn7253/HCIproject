        width: 70%;
        }
        .ui.menu .item img.logo {
            margin-right: 1.5em;
        }

        .main.container {
            margin-top: 7em;
        }

        .wireframe {
            margin-top: 2em;
        }

        .ui.footer.segment {
            margin: 5em 0em 0em;
            padding: 5em 0em;
        }
    </style>
</head>

<body>
    <header style="margin-bottom: 7%">
        <div class="ui top fixed inverted menu" style="display:block">
            <div class="ui container">
                <div class="large header item">
                    <h2 class="ui grey inverted header">Club Collector</h2>
                </div>
                <div class="right menu">
                    <% if(session==="none"){ %>
                        <a class="item">
                            <i class="large sign-in icon" onclick="document.getElementById('id01').style.display='block'"></i>
                        </a>
                        <% } else { %>
                            <a class="item">
                                <i class="large power off icon"></i>
                            </a>
                            <% } %>

                                <a class="item">
                                    <i class="large bars icon"></i>
                                </a>
                </div>
            </div>
            <div class="ui container">
                <a href="/" class="active red item" id='home'>홈</a>
                <a href="/club" class="orange item" id='club'>동아리</a>
                <a href="/group" class="yellow item" id='group'>그룹</a>
                <a href="/board" class="olive item" id='board'>게시판</a>
                <a href="/maching" class="green item" id='maching'>매칭하기</a>
                <% if (title) { %>
                    <script>
                        //menu id 값 받음
                        var selectedMenu = document.getElementById("mainTitle").textContent;
                        var menuActived = document.getElementById(selectedMenu);
                        menuActived.className = "active " + menuActived.className;
                    </script>
                    <% } %>
            </div>
        </div>
        `
    </header>
    

    <div class="containesr">
